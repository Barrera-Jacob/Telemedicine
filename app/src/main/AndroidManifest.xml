<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.designskill.telemedicine">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name="com.designskill.telemedicine.activities.VideoChatViewActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/FullScreenVideoTheme">

        </activity>



        <activity
            android:name="com.designskill.telemedicine.activities.CallingActivity"
            android:theme="@style/AppTheme.NoActionAndStatusBar"></activity>
        <activity android:name="com.designskill.telemedicine.activities.BookAppointmentActivity" />
        <activity android:name="com.designskill.telemedicine.activities.DoctorsProfileActivity" />
        <activity android:name="com.designskill.telemedicine.activities.ChatActivity" />
        <activity android:name="com.designskill.telemedicine.activities.MessageActivity" />
        <activity android:name="com.designskill.telemedicine.activities.MyAppointmentActivity" />
        <activity
            android:name="com.designskill.telemedicine.activities.ProfileActivity"
            android:theme="@style/AppTheme.NoActionAndStatusBar" />
        <activity android:name="com.designskill.telemedicine.activities.SearchListActivity" />
        <activity android:name="com.designskill.telemedicine.activities.SearchActivity" />
        <activity android:name="com.designskill.telemedicine.activities.SettingActivity" />
        <activity android:name="com.designskill.telemedicine.activities.SignupActivity" />
        <activity android:name="com.designskill.telemedicine.activities.SignInActivity" />
        <activity android:name="com.designskill.telemedicine.activities.MainActivity" />
        <activity
            android:name="com.designskill.telemedicine.activities.SplashScreenActivity"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>

